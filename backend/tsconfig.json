{
"compilerOptions": {
"target": "ES2020",
"module": "commonjs",
"moduleResolution": "Node",
"rootDir": "src",
"outDir": "dist",
"strict": true,
"esModuleInterop": true,
"experimentalDecorators": true,
"emitDecoratorMetadata": true,
"resolveJsonModule": true,
"skipLibCheck": true,
"baseUrl": "src",
"paths": {
"@core/*": ["core/*"],
"@app/*": ["application/*"],
"@infra/*": ["infra/*"],
"@shared/*": ["shared/*"]
}
},
"include": ["src/**/*"],
"exclude": ["dist", "node_modules"]
}