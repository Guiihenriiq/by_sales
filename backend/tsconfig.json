{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": [
      "ES2022"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* TypeORM */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/domain/*": [
        "src/domain/*"
      ],
      "@/application/*": [
        "src/application/*"
      ],
      "@/infra/*": [
        "src/infra/*"
      ],
      "@/main/*": [
        "src/main/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}